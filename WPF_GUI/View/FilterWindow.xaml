<Window x:Class="WPF_GUI.View.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GUI.View"
        xmlns:convertor="clr-namespace:WPF_GUI.ViewModel.Convertor"
        mc:Ignorable="d"
        Title="FilterDialog" Height="300" Width="300">
    <Window.Resources>
        <convertor:StringDoubleConverter x:Key="StringDoubleConverter"></convertor:StringDoubleConverter>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <WrapPanel>    
            <Button Content="_Ok" Width="100" Command="{Binding OkCammand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
            <Button Content="_Cancel" Width="100" Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
            <Button Content="_Gaussian" Width="100"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBox Name="rows" Width="100" Text="{Binding Rows, Converter={StaticResource StringDoubleConverter}}"/>
                    <Label Content="x"/>
                    <TextBox Name="cols" Width="100"  Text="{Binding Cols, Converter={StaticResource StringDoubleConverter}}"/>
                </WrapPanel>
            </StackPanel>
        
        <ScrollViewer Grid.Row="1">

            <DataGrid Name="dataGrid" ItemsSource="{Binding UserSet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      />

        </ScrollViewer>
    </Grid>
</Window>
