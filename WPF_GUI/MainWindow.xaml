<Window x:Class="WPF_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GUI"
        xmlns:prop="clr-namespace:WPF_GUI.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Top="20" Margin="-300,0,0,0" HorizontalAlignment="Center" MinWidth="800" MinHeight="450"
        KeyUp="MainWindow_OnKeyUp">
    <Window.Resources>
    </Window.Resources>
    <Grid Margin="0,0,0,0">
        <WrapPanel Margin="10,27,157.6,338">
            <ToolBar x:Name="toolBar" Height="55" Width="628" Opacity="1" Background="{x:Null}">
                <Button Name ="openButton" IsEnabled="True" Command="{Binding OpenImageCommand}">
                    <StackPanel>
                        <Image Height ="43" Width="43" Opacity="1" Name ="openIco"/>
                    </StackPanel>
                </Button>
                <Button Name ="leftButton" IsEnabled="True" Command="{Binding PrevCommand}" Height ="43" Width="43">
                    <StackPanel>
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                            <Setter Property="Source" Value="{x:Static local:Icons.left}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="False">
                                            <Setter Property="Source" Value="D:\Studying\Programming\ImageEditor\WPF_GUI\icons\left_gray.ico" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </StackPanel>
                </Button>
                                <!--<Image Source="D:\Studying\Programming\ImageEditor\WPF_GUI\icons\left.ico"></Image>-->
                <Button Name ="rightButton" IsEnabled="True" Command="{Binding NextCommand}">
                    <StackPanel>
                        <Image Height ="43" Width="43" Opacity="1" Name ="rightIco"/>
                    </StackPanel>
                </Button>
                <Button Name ="removeButton" Click="Remove_OnClick" IsEnabled="False">
                    <StackPanel>
                        <Image Height="43" Width="43" Opacity="1" Name ="removeIco"/>
                    </StackPanel>
                </Button>
                <Button Name ="editButton" IsEnabled="False" Click="EditButton_OnClick">
                    <StackPanel>
                        <Image Height="43" Width="43" Opacity="1" Name ="editIco"/>
                    </StackPanel>
                </Button>
                <Button Name ="saveButton" IsEnabled="False" Click="SaveButton_OnClick">
                    <StackPanel>
                        <Image Height="43" Width="43" Opacity="1" Name ="saveIco"/>
                    </StackPanel>
                </Button>
                <Button Name ="contAndBrightButton" IsEnabled="False" Click="ContAndBrightButton_OnClick">
                    <StackPanel>
                        <Image Height="43" Width="43" Opacity="1" Name ="contAndBrightIco"/>
                    </StackPanel>
                </Button>
                <Button Name ="rotateButton" IsEnabled="False">
                    <StackPanel>
                        <Image Height="43" Width="43" Opacity="1" Name ="rotateIco"/>
                    </StackPanel>
                </Button>
                <Button Name ="resizeButton" IsEnabled="False">
                    <StackPanel>
                        <Image Height="43" Width="43" Opacity="1" Name ="resizeIco"/>
                    </StackPanel>
                </Button>
            </ToolBar>
        </WrapPanel>
        <WrapPanel Margin="10,87,157.6,10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="image" Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding OpenedImage.Current}"/>
        </WrapPanel>
        <ListView Name="preview"
                  HorizontalAlignment="Right"
                  Margin="0,87,9.6,10" Width="146"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  SelectionChanged="Preview_OnSelectionChanged"
                  SelectionMode="Single">
        </ListView>
    </Grid>
</Window>
